#include <stdlib.h>
#include <limits.h>
/**
* string_nconcat - concatenates two strings 
* @b: is the number of bytes to allocate
* Return: nothing
*/

char *string_nconcat(char *s1, char *s2, unsigned int n)
{

	void *p;
	
	if (n >= sizeof(s2)
	{
		p = malloc(sizeof(s1) + sizeof(s2));
	}
	else
	{	
		p = malloc(sizeof(s1) + n + 1);
	}

	if (p == NULL)
	{
		return(NULL);
	}

	return (p);

}
